<Window x:Class="AssetsView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetsView"
        xmlns:viewModel="clr-namespace:AssetsView.MVVM.ViewModel"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d" 
        Title="AssetsView" Height="1024" Width="1440" Background="#000000" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    
    <Grid Height="1024">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- DragMove -->
        <Border x:Name="TitleBar" Height="30" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" VerticalAlignment="Center" Background="Black" Panel.ZIndex="1" Grid.Column="1"/>
        <!-- Vertical panel -->
        <StackPanel x:Name="VerticalPanel" Grid.Column="0" Background="#0E0E0E" Grid.RowSpan="2">
            <Image x:Name="LogoImage" Source="/Data/Icons/logo.png" Margin="26,37,26,0"/>

            <!-- Button 1 -->
            <RadioButton x:Name="DashboardButton" Style="{DynamicResource RadioButtonHoverStyle}" Width="100" Height="93" Margin="0,127,0,0" Background="#0E0E0E"
                BorderBrush="Transparent" Cursor="Hand" Command="{Binding DashboardViewCommand}" IsChecked="True">
                <Grid>
                    <Image Source="/Data/Icons/dashboard.png" Width="25" Height="25"/>
                    <Rectangle x:Name="DashboardRectangle" Style="{DynamicResource OpacityStyle}" IsEnabled="False"/>
                </Grid>
            </RadioButton>

            <!-- Button 2 -->
            <RadioButton x:Name="SettingButton" Style="{DynamicResource RadioButtonHoverStyle}" Width="100" Height="93" Margin="0,0,0,0" Background="#0E0E0E"
                BorderBrush="Transparent" Cursor="Hand" Command="{Binding SettingsViewCommand}">
                <Grid>
                    <Image Source="/Data/Icons/setting.png" Width="25" Height="25"/>
                    <Rectangle x:Name="SettingRectangle" Style="{DynamicResource OpacityStyle}" Width="22" Height="21" IsEnabled="False"/>
                </Grid>
            </RadioButton>

            <!-- Button 3 -->
            <RadioButton x:Name="HelpButton" Style="{DynamicResource RadioButtonHoverStyle}" Width="100" Height="93" Margin="0,0,0,462" Background="#0E0E0E"
                BorderBrush="Transparent" Cursor="Hand" Command="{Binding HelpViewCommand}">
                <Grid>
                    <Image Source="/Data/Icons/help.png" Width="25" Height="25"/>
                    <Rectangle x:Name="HelpRectangle" Style="{DynamicResource OpacityStyle}" IsEnabled="False"/>
                </Grid>
            </RadioButton>
            <!-- Logout button -->
            <Button x:Name="ExitButton" Style="{DynamicResource ButtonHoverStyle}" Width="100" Height="93" Background="#0E0E0E" BorderBrush="Transparent" Cursor="Hand" Click="ButtonExit_Click">
                <Image Source="/Data/Icons/logout.png" Width="25" Height="25"/>
            </Button>
        </StackPanel>
        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>