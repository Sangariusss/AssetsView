<Window x:Class="AssetsView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetsView"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d" 
        Title="AssetsView" Height="1024" Width="1440" ResizeMode="NoResize" Background="#000000" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Key="CurrencyListItem">
            <Button Width="584" Style="{DynamicResource ButtonHoverStyle}" Click="CurrencyButton_Click" Height="46" Background="#0E0E0E" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Width="584" Height="46" Orientation="Horizontal">
                    <Image Source="{Binding ImageSource}" Width="19" Height="14" Margin="16,16,0,16"/>
                    <TextBlock Text="{Binding CurrencyCode}" Margin="16,16,0,16" Foreground="White" FontFamily="Mariupol" FontSize="15" Width="32" Height="14" HorizontalAlignment="Left" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Name}" Margin="16,16,0,16" Foreground="#FF7E7E7E" FontFamily="Mariupol" FontSize="15" Width="128" Height="14" HorizontalAlignment="Right"/>
                </StackPanel>
            </Button>
        </DataTemplate>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#1B1B1B"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#1B1B1B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#1B1B1B"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#1B1B1B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FocusVisual1">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background1" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border1" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background1" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border1" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background1" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border1" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background1" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border1" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground1" Color="#FF838383"/>
        <Style x:Key="ButtonHoverStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual1}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border1}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#1B1B1B"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#1B1B1B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#1B1B1B"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#1B1B1B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background1}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border1}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground1}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonZoomStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource RoundedButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.5"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
    </Window.Resources>
    
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>

    <Grid Height="1024">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- DragMove -->
        <Border x:Name="TitleBar" Height="30" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" VerticalAlignment="Center" Background="Black" Panel.ZIndex="1" Grid.Column="1"/>
        <!-- Vertical panel -->
        <StackPanel x:Name="VerticalPanel" Grid.Column="0" Background="#0E0E0E" Grid.RowSpan="2">
            <Image x:Name="LogoImage" Source="Data/Icons/logo.png" Margin="26,37,26,0"/>

            <!-- Button 1 -->
            <Button x:Name="DashboardButton" Style="{DynamicResource ButtonHoverStyle}" Width="100" Height="93" Margin="0,127,0,0" Background="#0E0E0E"
                BorderBrush="Transparent" Cursor="Hand">
                <Image Source="Data/Icons/dashboard.png" Width="25" Height="25"/>
            </Button>

            <!-- Button 2 -->
            <Button x:Name="SettingButton" Style="{DynamicResource ButtonHoverStyle}" Width="100" Height="93" Margin="0,0,0,0" Background="#0E0E0E"
                BorderBrush="Transparent" Cursor="Hand">
                <Image Source="Data/Icons/setting.png" Width="25" Height="25"/>
            </Button>

            <!-- Button 3 -->
            <Button x:Name="HelpButton" Style="{DynamicResource ButtonHoverStyle}" Width="100" Height="93" Margin="0,0,0,462" Background="#0E0E0E"
                BorderBrush="Transparent" Cursor="Hand">
                <Image Source="Data/Icons/help.png" Width="25" Height="25"/>
            </Button>
            <!-- Logout button -->
            <Button x:Name="ExitButton" Style="{DynamicResource ButtonHoverStyle}" Width="100" Height="93" Background="#0E0E0E" BorderBrush="Transparent" Cursor="Hand" Click="ButtonExit_Click">
                <Image Source="Data/Icons/logout.png" Width="25" Height="25"/>
            </Button>
        </StackPanel>

        <!-- SearchPanel -->
        <StackPanel x:Name="SearchPanel" Width="640" Height="388" Margin="33,7,669,599" Background="#0E0E0E" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" Visibility="Visible">
            <Grid>
                <TextBox x:Name="SearchTextBox" Width="584" Height="46" Margin="26,38,30,0" Background="#171717" BorderThickness="0" FontFamily="Mariupol" Foreground="Gray" Text="Type a country / currency" FontSize="15" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Padding="60,16,80,16" FontWeight="Regular" BorderBrush="White" TextChanged="SearchTextBox_TextChanged"/>
                <Image Source="Data/Icons/search.png" Width="25" Height="25" Margin="38,48,576,11"/>
                <Button x:Name="BackButton" Style="{DynamicResource ButtonHoverStyle}" Width="57" Height="46" Background="#1B1B1B" Margin="553,38,30,0" BorderThickness="0" Cursor="Hand" Click="BackButton_Click">
                    <Image Source="Data/Icons/logout.png" Width="25" Height="25" Margin="0,11,0,10"/>
                </Button>
            </Grid>
            <ListView x:Name="CountryListView" Width="584" Height="247" BorderThickness="0" Margin="26,21,30,0" ItemTemplate="{StaticResource CurrencyListItem}" ItemsSource="{Binding CountrySeries}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        </StackPanel>

        <!-- ConvertPanel -->
        <StackPanel x:Name="ConvertPanel" Width="640" Height="388" Margin="033,7,669,599" Background="#FF0E0E0E" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" Visibility="Visible">
            <StackPanel>
                <TextBlock x:Name="Title" Text="Convert" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontSize="25" Width="95" Foreground="White" Height="24" Margin="30,35,515,0" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Width="581" Height="50" Margin="29,30,30,0">
                <Grid Height="50">
                    <TextBox x:Name="CurrencyTextBox1" Width="461" Height="50" Background="Black" BorderThickness="1.5" BorderBrush="#141414" Margin="0,0,120,0" Padding="16,0,0,0" Foreground="White" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontSize="18" FontWeight="Bold" TextAlignment="Left" VerticalContentAlignment="Center"/>
                    <Button x:Name="CurrencyButton1" Style="{DynamicResource ButtonHoverStyle}" Width="120" Height="50" Margin="461,0,0,0" Background="#141414" BorderThickness="0" Click="CurrencyButton1_Click">
                        <StackPanel Orientation="Horizontal" Width="120" Height="50" Margin="-1,-1,0,0">
                            <Image Source="{Binding ImageSource}" Width="19" Height="12" Margin="13,20,0,18"/>
                            <TextBlock Text="{Binding CurrencyCode}" Width="32" Height="13" Margin="11,18,0,18" Foreground="#FFFFFF" FontSize="14" FontFamily="Fonts/Mariupol-Regular.ttf" FontWeight="Medium"/>
                            <Image Source="Data/Icons/arrow.png" Width="16" Height="21" Margin="16,15,13,14"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
            <!-- SwitchButton -->
            <Button x:Name="SwitchButton" Style="{DynamicResource ButtonHoverStyle}" Width="52" Height="39" Margin="30,21,558,0" Background="#171717" BorderThickness="0">
                <Image Source="Data/Icons/switch.png" Width="23" Height="31"/>
            </Button>
            <StackPanel Width="581" Height="50" Margin="29,20,30,0">
                <Grid Height="50">
                    <TextBox x:Name="CurrencyTextBox2" Width="461" Height="50" Background="Black" BorderThickness="1.5" BorderBrush="#141414" Margin="0,0,120,0" Padding="16,0,0,0" Foreground="White" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontSize="18" FontWeight="Bold" TextAlignment="Left" VerticalContentAlignment="Center"/>
                    <Button x:Name="CurrencyButton2" Style="{DynamicResource ButtonHoverStyle}" Width="120" Height="50" Margin="461,0,0,0" Background="#141414" BorderThickness="0" Click="CurrencyButton2_Click">
                        <StackPanel Orientation="Horizontal" Width="120" Height="50" Margin="-1,-1,0,0">
                            <Image Source="{Binding ImageSource}" Width="19" Height="12" Margin="13,20,0,18"/>
                            <TextBlock Text="{Binding CurrencyCode}" Width="32" Height="13" Margin="11,18,0,18" Foreground="#FFFFFF" FontSize="14" FontFamily="Fonts/Mariupol-Regular.ttf" FontWeight="Medium"/>
                            <Image Source="Data/Icons/arrow.png" Width="16" Height="21" Margin="16,15,13,14"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
            <TextBlock x:Name="ExchangeRateTextBlock1" Text="1 EUR = 1,06770 USD" Width="175" Height="19" Margin="30,36,440,0" FontSize="18" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontWeight="Medium" Foreground="#FFFFFF"/>
            <TextBlock x:Name="PercentageChangeTextBlock" Text="Up by 0,00% (0,000000 USD)" Width="190" Height="18" Margin="30,16,420,30" FontSize="15" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontWeight="Regular" Foreground="#42FF00"/>
        </StackPanel>
        <!-- ChartPanel -->
        <StackPanel x:Name="ChartPanel" Width="640" Height="530" Margin="33,426,667,38" Background="#FF0E0E0E" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1">
            <StackPanel Width="640" Height="120">
                <Grid Width="640" Height="120">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="94" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Source="Data/Images/FlagsRounded/USDrounded.png" Width="30" Height="30" Margin="30,40,34,50" Grid.Column="0"/>
                    <Image Source="Data/Images/FlagsRounded/GBProunded.png" Width="30" Height="30" Margin="41,52,23,38" Grid.Column="0"/>
                    <TextBlock x:Name="CurrencyConversionTextBlock" Text="USD to GBP" Width="100" Height="19" Margin="0,40,446,61" FontFamily="Data/Fonts/Mariupol-Regular.ttf" Foreground="#FFFFFF" FontSize="18" FontWeight="Medium" Grid.Column="1"/>
                    <TextBlock x:Name="ExchangeRateTextBlock2" Text="1 USD = 0,830427 GPB" Width="155" Height="18" Margin="0,69,391,33" FontFamily="Data/Fonts/Mariupol-Regular.ttf" Foreground="#42FF00" FontSize="15" FontWeight="Regular" Grid.Column="1"/>
                </Grid>
            </StackPanel>
            <lvc:CartesianChart 
                Series="{Binding Series}" Width="504" Height="181">
            </lvc:CartesianChart>
        </StackPanel>
        <!-- Favourite&PopularPanel -->
        <StackPanel x:Name="FavouritePopularPanel" Width="603" Height="949" Margin="707,7,30,38" Background="#FF0E0E0E" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1">
            <StackPanel x:Name="FavouriteRatesPanel" Height="88">
                <Grid Height="88">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="535" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Favourite rates" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontSize="25" Width="180" Height="24" Foreground="White" FontWeight="Bold" Margin="35,35,320,29" Grid.RowSpan="1"/>
                    <Button x:Name="buttonAddFavouriteRates" Style="{DynamicResource ButtonZoomStyle}" Width="40" Height="40" Grid.Column="1" Margin="0,27,26,21" Background="#FF171717" BorderBrush="#FF171717" Cursor="Hand" Click="ButtonAddFavouriteRates_Click">
                        <Image Height="24" Width="24" Source="Data/Icons/plus.png"/>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel x:Name="PopularPanel" Width="601" Height="69" Margin="0,428,0,0">
                <TextBlock Text="Popular" FontFamily="Data/Fonts/Mariupol-Regular.ttf" FontSize="25" Width="93" Height="30" Foreground="White" Margin="35,23,473,22" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>